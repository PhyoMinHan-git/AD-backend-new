@{
    ViewData["Title"] = "Delete Coach";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Delete Coach</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DeleteCoach", "CoachCreate", FormMethod.Post))
                {
                    <div class="form-group mb-3">
                        <label for="username">Coach Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this coach?')">Delete Coach</button>
                        <a href="@Url.Action("ShowDashboard", "AdminHome")" class="btn btn-secondary">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>